copy_img() {
    # copy the image by using the clipboard
    # don't forget to set CPIMG_OUTDIR

    # if in soup, use $(basename "$PWD")_1.webp
    # to copy the image
    if [ ! -z $CPIMG_OUTDIR ]
    then
        OUTPATH=$CPIMG_OUTDIR/$1
    else
        echo "CPIMG_OUTDIR not set, copying to absolute path"
        OUTPATH=$1 
    fi

    echo "copying file" $(xsel -ob) "to outpath:" $OUTPATH
    cp $(xsel -ob) $OUTPATH
}


zat(){
    nohup zathura $1 >/dev/null 2>&1  & 
    %
}
launch_landrop() {
    nohup landrop $1 >/dev/null 2>&1  & 
    disown %
}
bind 'set completion-ignore-case on'


pomodoro(){
    start=$SECONDS
    total_time=$1
    time_left=$total_time

    while [ $time_left -gt 0 ]
    do
        time_elapsed_seconds=$(($SECONDS - $start))
        time_left=$(($total_time-$time_elapsed_seconds))
        echo $time_left "seconds left"
        sleep 1
    done;
}

get_todos(){
    rg "@|\^" > tmp.txt && vim tmp.txt && rm tmp.txt
}
